{
  "name": "opavlovskyi-components",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/opavlovskyi/components/src",
  "prefix": "opavlovskyi",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/opavlovskyi/components/ng-package.json",
        "tailwindConfig": "libs/opavlovskyi/components/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/opavlovskyi/components/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/opavlovskyi/components/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/opavlovskyi/components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/opavlovskyi/components/**/*.ts",
          "libs/opavlovskyi/components/**/*.html"
        ]
      }
    }
  },
  "tags": ["opavlovskyi", "ui", "components"]
}
